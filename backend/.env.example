# Taxonomy database settings
TAXONOMY_MONGODB_URI=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER>/?retryWrites=true&w=majority&appName=Brújula-Dev
TAXONOMY_DATABASE_NAME=brujula-dev
TAXONOMY_MODEL_ID=taxonomy-model-id

# Application database settings
APPLICATION_MONGODB_URI=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER>/?retryWrites=true&w=majority&appName=Brújula-Dev
APPLICATION_DATABASE_NAME=brujula-dev

# Metrics settings
METRICS_MONGODB_URI=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER>/?retryWrites=true&w=majority&appName=Brújula-Dev
METRICS_DATABASE_NAME=brujula-dev
BACKEND_ENABLE_METRICS=False

# Users database settings
USERDATA_MONGODB_URI=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER>/?retryWrites=true&w=majority&appName=Brújula-Dev
USERDATA_DATABASE_NAME=brujula-dev

# Google Cloud Platform settings
GOOGLE_APPLICATION_CREDENTIALS=keys/credentials.json
VERTEX_API_REGION=us-central1
EMBEDDINGS_SERVICE_NAME=GOOGLE-VERTEX-AI
# See https://cloud.google.com/vertex-ai/generative-ai/docs/embeddings/get-text-embeddings#supported-models e.g.:
#   text-embedding-005
#   textembedding-gecko@003
EMBEDDINGS_MODEL_NAME=text-embedding-005

# Sentry settings
BACKEND_SENTRY_DSN=https://
BACKEND_ENABLE_SENTRY=False
# For supported options see: app.sentry_init.BackendSentryConfig
BACKEND_SENTRY_CONFIG={"tracesSampleRate": 0.2, "enableLogs": false, "logLevel": "info", "eventLevel": "error"}

# Country settings
DEFAULT_COUNTRY_OF_USER=Unspecified

# Settings for local development,
LOG_CONFIG_FILE=logging.cfg.dev.yaml

FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://0.0.0.0:8080
TARGET_ENVIRONMENT_TYPE=local
TARGET_ENVIRONMENT_NAME=local

# Other features configurations
BACKEND_FEATURES='{}'

# Configuration for the experience pipeline
BACKEND_EXPERIENCE_PIPELINE_CONFIG={"number_of_clusters": 5, "number_of_top_skills_to_pick_per_cluster": 1}

# Secure registration links and reports
# Used to validate tokenized registration links and report lookups
SEC_TOKEN=<STRING>

# CV storage and limits (optional; required to persist uploads)
BACKEND_CV_STORAGE_BUCKET=<GCS_BUCKET_NAME>
BACKEND_CV_MAX_UPLOADS_PER_USER=<INTEGER>
BACKEND_CV_RATE_LIMIT_PER_MINUTE=<INTEGER>


# Locales
BACKEND_SUPPORTED_LANGUAGES='["en"]'
BACKEND_DEFAULT_LOCALE=en-US
